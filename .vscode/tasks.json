{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SDL2 app",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/build.ps1",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}