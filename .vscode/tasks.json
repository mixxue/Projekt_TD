{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SDL2 app",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "${workspaceFolder}/src/include",
                "-L", "${workspaceFolder}/src/lib",
                "main.cpp",
                "-o", "${workspaceFolder}/main.exe",
                "-lmingw32", "-lSDL2main", "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}